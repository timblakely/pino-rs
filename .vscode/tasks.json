{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cargo Build Debug",
            "type": "process",
            "command": "cargo",
            "args": [
                "build"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
            "options": {
                "cwd": "firmware"
            }
        },
        {
            "label": "Cargo Size Debug",
            "type": "process",
            "command": "cargo",
            "args": [
                "size",
                "-q"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "options": {
                "cwd": "firmware"
            }
        },
        {
            "label": "Build debug",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Cargo Build Debug",
                "Cargo Size Debug"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "firmware"
            }
        },
        {
            "label": "Cargo Build Release",
            "type": "process",
            "command": "cargo",
            "args": [
                "build",
                "--release"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
            "options": {
                "cwd": "firmware"
            }
        },
        {
            "label": "Cargo Size Release",
            "type": "process",
            "command": "cargo",
            "args": [
                "size",
                "--release",
                "-q"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "options": {
                "cwd": "firmware"
            }
        },
        {
            "label": "Build release",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Cargo Build Release",
                "Cargo Size Release"
            ],
            "problemMatcher": [],
            "group": "build",
            "options": {
                "cwd": "firmware"
            }
        },
        {
            "label": "Cargo Clean",
            "type": "process",
            "command": "cargo",
            "args": [
                "clean"
            ],
            "problemMatcher": [],
            "group": "build"
        }
    ]
}
