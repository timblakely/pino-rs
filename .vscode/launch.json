{
    /*
     * Requires the Rust Language Server (RLS) and Cortex-Debug extensions
     * https://marketplace.visualstudio.com/items?itemName=rust-lang.rust
     * https://marketplace.visualstudio.com/items?itemName=marus25.cortex-debug
     */
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cortex-debug",
            "request": "launch",
            "name": "BLDC Debug",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}/firmware",
            "preLaunchTask": "BLDC debug",
            "runToMain": true,
            "executable": "./target/thumbv7em-none-eabihf/debug/bldc",
            "device": "STM32G474RE",
            "configFiles": [
                "interface/stlink.cfg",
                "${workspaceRoot}/tools/stm32g4x_custom.cfg"
            ],
            "searchDir": [],
            "svdFile": "${workspaceRoot}/tools/STM32G474xx.svd",
            "swoConfig": {
                "enabled": true,
                // For full-speed ITM
                "cpuFrequency": 170000000,
                "swoFrequency": 24000000,
                // For initial boot (16MHz) ITM
                // "cpuFrequency": 16000000,
                // "swoFrequency": 16000000,
                "source": "probe",
                "decoders": [
                    {
                        "type": "console",
                        "label": "ITM",
                        "port": 0
                    }
                    // Example https://wiki.octanis.org/stm32/vscode#using_the_swo_pin_debugging_with_graphics
                    //   {
                    //     "port": 0,
                    //     "type": "graph",
                    //     "encoding": "signed",
                    //     "graphId": "data1",
                    //     "scale": 0.016
                    //   }
                ]
                // Example for graphing data written out the ITM port
                // "graphConfig": [
                //   {
                //     "label": "VBAT",
                //     "type": "realtime",
                //     "maximum": 28,
                //     "minimum": 20,
                //     "timespan": 10,
                //     "plots": [
                //       {
                //           "label": "dcVBAT",
                //           "graphId": "data1",
                //           "color": "#8A2BE2"
                //       }
                //     ]
                //   }
                // ]
            },
            "openOCDLaunchCommands": [
                "adapter speed 24000"
            ],
            "debuggerArgs": [
                "-s",
                "./tools/openocd.gdb"
            ]
        },
        {
            "type": "cortex-debug",
            "request": "launch",
            "name": "BLDC Release",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}/firmware",
            "preLaunchTask": "BLDC release",
            "runToMain": true,
            "executable": "./target/thumbv7em-none-eabihf/release/bldc",
            "device": "STM32G474RE",
            "configFiles": [
                "interface/stlink.cfg",
                "${workspaceRoot}/tools/stm32g4x_custom.cfg"
            ],
            "svdFile": "${workspaceRoot}/tools/STM32G474xx.svd",
            "swoConfig": {
                "enabled": true,
                "cpuFrequency": 16000000,
                "swoFrequency": 16000000,
                "source": "probe",
                "decoders": [
                    {
                        "type": "console",
                        "label": "ITM",
                        "port": 0
                    }
                    // Example https://wiki.octanis.org/stm32/vscode#using_the_swo_pin_debugging_with_graphics
                    //   {
                    //     "port": 0,
                    //     "type": "graph",
                    //     "encoding": "signed",
                    //     "graphId": "data1",
                    //     "scale": 0.016
                    //   }
                ]
                // Example for graphing data written out the ITM port
                // "graphConfig": [
                //   {
                //     "label": "VBAT",
                //     "type": "realtime",
                //     "maximum": 28,
                //     "minimum": 20,
                //     "timespan": 10,
                //     "plots": [
                //       {
                //           "label": "dcVBAT",
                //           "graphId": "data1",
                //           "color": "#8A2BE2"
                //       }
                //     ]
                //   }
                // ]
            },
            "openOCDLaunchCommands": [
                "adapter speed 24000"
            ],
            "debuggerArgs": [
                "-s",
                "./tools/openocd.gdb"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug fdcom",
            "cargo": {
                "args": [
                    "build",
                    "--bin=fdcom",
                    "--package=fdcom"
                ],
                "filter": {
                    "name": "fdcom",
                    "kind": "bin"
                }
            },
            "args": [
                "-p",
                "/dev/fdcanusb"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug tests in 'fdcom'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=fdcom",
                    "--package=fdcom"
                ],
                "filter": {
                    "name": "fdcom",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
