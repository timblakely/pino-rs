{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "BLDC Debug",
            "type": "process",
            "command": "cargo",
            "args": [
                "build"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
            "options": {
                "cwd": "firmware"
            }
        },
        {
            "label": "BLDC Size Debug",
            "type": "process",
            "command": "cargo",
            "args": [
                "size",
                "-q"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "options": {
                "cwd": "firmware"
            }
        },
        {
            "label": "BLDC debug",
            "dependsOrder": "sequence",
            "dependsOn": [
                "BLDC Debug",
                "BLDC Size Debug"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "firmware"
            }
        },
        {
            "label": "BLDC Release",
            "type": "process",
            "command": "cargo",
            "args": [
                "build",
                "--release"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
            "options": {
                "cwd": "firmware"
            }
        },
        {
            "label": "BLDC Size Release",
            "type": "process",
            "command": "cargo",
            "args": [
                "size",
                "--release",
                "-q"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "options": {
                "cwd": "firmware"
            }
        },
        {
            "label": "BLDC release",
            "dependsOrder": "sequence",
            "dependsOn": [
                "BLDC Release",
                "BLDC Size Release"
            ],
            "problemMatcher": [],
            "group": "build",
            "options": {
                "cwd": "firmware"
            }
        },
        {
            "label": "Cargo Clean",
            "type": "process",
            "command": "cargo",
            "args": [
                "clean"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build fdcom",
            "type": "process",
            "command": "cargo",
            "args": [
                "build",
                "-p",
                "fdcom"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        }
    ]
}
